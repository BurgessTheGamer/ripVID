# ripVID Desktop App Environment Variables
# Copy this file to .env and fill in your values

# ===================================
# Sentry Configuration (Error Tracking)
# ===================================
# Get your DSN from https://sentry.io
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-organization-name
SENTRY_PROJECT=ripvid-desktop

# ===================================
# Tauri Updater
# ===================================
# Public key for update signature verification
TAURI_PUBLIC_KEY=dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6...
# Private key for signing updates (KEEP SECURE!)
TAURI_PRIVATE_KEY=your-private-key-here
TAURI_KEY_PASSWORD=your-key-password

# ===================================
# Code Signing Certificates
# ===================================

# Windows Code Signing
WINDOWS_CERTIFICATE=base64-encoded-certificate
WINDOWS_CERTIFICATE_PWD=certificate-password
WINDOWS_CERTIFICATE_THUMBPRINT=thumbprint-value

# macOS Code Signing
MACOS_CERTIFICATE=base64-encoded-certificate
MACOS_CERTIFICATE_PWD=certificate-password
APPLE_SIGNING_IDENTITY=Developer ID Application: Your Name (TEAM_ID)
APPLE_ID=your-apple-id@email.com
APPLE_PASSWORD=app-specific-password
APPLE_TEAM_ID=your-team-id
KEYCHAIN_PWD=temporary-keychain-password

# ===================================
# Build Configuration
# ===================================
NODE_ENV=production
VITE_APP_VERSION=2.0.0

# ===================================
# Analytics (Optional)
# ===================================
VITE_ANALYTICS_ID=your-analytics-id

# ===================================
# Feature Flags
# ===================================
VITE_ENABLE_AUTO_UPDATE=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_ANALYTICS=false

# ===================================
# GitHub (for CI/CD)
# ===================================
GITHUB_TOKEN=your-github-token
