{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.ripvid.app",
  "productName": "ripVID",
  "version": "2.0.0",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "",
    "externalBin": [],
    "icon": [
      "icons/icon.png"
    ],
    "longDescription": "",
    "resources": [],
    "shortDescription": "Download videos from YouTube and X",
    "targets": "all",
    "windows": {
      "digestAlgorithm": "sha256",
      "certificateThumbprint": null,
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "resizable": true,
        "title": "ripVID",
        "width": 900,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "shell:allow-open",
            "shell:allow-execute",
            "dialog:allow-save"
          ]
        }
      ]
    }
  }
}